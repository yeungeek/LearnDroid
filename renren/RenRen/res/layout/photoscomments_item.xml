<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff4f4f4" >

    <ImageView
        android:id="@+id/photoscomments_item_avatar"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dip"
        android:scaleType="centerCrop"
        android:src="@drawable/v5_0_1_widget_default_head" />

    <TextView
        android:id="@+id/photoscomments_item_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/photoscomments_item_avatar"
        android:layout_toLeftOf="@+id/photoscomments_item_reply"
        android:layout_toRightOf="@+id/photoscomments_item_avatar"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingRight="8dip"
        android:textColor="#000000"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/photoscomments_item_reply"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:scaleType="centerInside"
        android:src="@drawable/v5_0_1_action_button_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photoscomments_item_text"
        android:layout_toLeftOf="@+id/photoscomments_item_reply"
        android:layout_toRightOf="@+id/photoscomments_item_avatar" 
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/photoscomments_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:textColor="#ff888888"
            android:textSize="12sp" />
        <TextView 
            android:id="@+id/photoscomments_item_whisper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
        	android:textSize="14sp"
        	android:drawableLeft="@drawable/v5_0_1_lock_red"
        	android:text="悄悄话"
        	android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>