<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/v5_0_1_flipper_head_blue_background"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/friendsfind_back"
            android:layout_width="54dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/v5_0_1_flipper_head_title_wrapper_background"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/v5_0_1_flipper_head_back" />

        <ImageView
            android:layout_width="2px"
            android:layout_height="24dip"
            android:layout_gravity="center"
            android:src="@drawable/v5_0_1_flipper_head_separator" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"
            android:text="找人"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/v5_0_1_friend_search_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="48dip"
                        android:layout_weight="1" >

                        <EditText
                            android:id="@+id/friendsfind_search"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="8dip"
                            android:background="@drawable/edittext_bg"
                            android:drawableLeft="@drawable/v5_0_1_friend_search_icon"
                            android:drawablePadding="8dip"
                            android:hint="姓名  账号  人人ID  学校  公司 "
                            android:paddingRight="30dip"
                            android:textSize="12sp" />

                        <ImageButton
                            android:id="@+id/friendsfind_searchclear"
                            android:layout_width="30dip"
                            android:layout_height="30dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:background="#00000000"
                            android:paddingRight="8dip"
                            android:src="@drawable/v5_0_1_search_clear_icon_bg"
                            android:visibility="invisible" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/friendsfind_search_result"
                        android:layout_width="60dip"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_margin="8dip"
                        android:background="@drawable/v5_0_1_guide_button_black_background"
                        android:text="搜索"
                        android:textColor="#ff005092"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/friendsfind_id"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:textColor="#80333333"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/friendsfind_search_contacts"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:background="@drawable/v5_0_1_friends_item_bg"
                android:clickable="true"
                android:drawableLeft="@drawable/v5_0_1_search_contacts"
                android:drawablePadding="8dip"
                android:gravity="center_vertical"
                android:padding="8dip"
                android:text="通讯录找好友"
                android:textColor="#ff005092"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:background="#20333333" />

            <TextView
                android:id="@+id/friendsfind_search_classmate"
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:background="@drawable/v5_0_1_friends_item_bg"
                android:clickable="true"
                android:drawableLeft="@drawable/v5_0_1_friend_add_icon"
                android:drawablePadding="8dip"
                android:gravity="center_vertical"
                android:padding="8dip"
                android:text="找同学找同事"
                android:textColor="#ff005092"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:background="#20333333" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:gravity="bottom"
                android:padding="8dip"
                android:text="可能认识的人"
                android:textColor="#000000"
                android:textSize="14sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="@drawable/v5_0_1_profile_header_divider" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF" >

                <ImageView
                    android:id="@+id/friendsfind_collection_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="8dip"
                    android:src="@drawable/v5_0_1_abslistview_empty" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/friendsfind_collection_img"
                    android:layout_centerHorizontal="true"
                    android:text="暂时没有内容"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>