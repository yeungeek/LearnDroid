<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF" >

    <ImageView
        android:id="@+id/nearby_item_image"
        android:layout_width="100dip"
        android:layout_height="80dip"
        android:layout_margin="8dip"
        android:scaleType="centerCrop"
        android:src="@drawable/v5_0_1_nearby_activity_photo_bg" />

    <TextView
        android:id="@+id/nearby_item_nuomi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nearby_item_image"
        android:layout_alignRight="@+id/nearby_item_image"
        android:layout_below="@+id/nearby_item_image"
        android:gravity="center"
        android:padding="8dip"
        android:text="糯米网"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/nearby_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nearby_item_image"
        android:layout_toLeftOf="@+id/nearby_item_groupicon"
        android:layout_toRightOf="@+id/nearby_item_image"
        android:padding="8dip"
        android:text="美国加州牛肉面大王"
        android:textColor="#000000"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/nearby_item_groupicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nearby_item_name"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/nearby_item_name"
        android:padding="8dip"
        android:src="@drawable/v5_0_1_nearby_activity_group" />

    <TextView
        android:id="@+id/nearby_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nearby_item_name"
        android:layout_below="@+id/nearby_item_name"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="8dip"
        android:text="[大拇指广场][加州牛肉面大王]仅售17元,价值29元超值套餐!"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/nearby_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nearby_item_nuomi"
        android:layout_alignLeft="@+id/nearby_item_name"
        android:layout_alignTop="@+id/nearby_item_nuomi"
        android:gravity="center"
        android:padding="8dip"
        android:text="17.0元"
        android:textColor="#FF0000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/nearby_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nearby_item_nuomi"
        android:layout_alignTop="@+id/nearby_item_nuomi"
        android:layout_toRightOf="@+id/nearby_item_price"
        android:gravity="center"
        android:padding="8dip"
        android:text="10.0元"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/nearby_item_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nearby_item_nuomi"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/nearby_item_nuomi"
        android:gravity="center"
        android:padding="8dip"
        android:text="99米"
        android:textSize="12sp" />

</RelativeLayout>