<?xml version="1.0" encoding="UTF-8"?>
<!-- 默认android:visibility="gone" -->
<RelativeLayout  android:layout_width="fill_parent" android:layout_height="90.0dip" android:visibility="gone"
  xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- 可能是一条分割线 -->
    <View android:id="@id/vCenter" android:background="@drawable/shu_zhi_divider_wrap" android:layout_width="3.0dip" android:layout_height="fill_parent" android:layout_centerHorizontal="true" />
    <RelativeLayout android:id="@id/rlLeft" android:paddingBottom="10.0dip" android:focusable="true" android:clickable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_toLeftOf="@id/vCenter" android:layout_alignParentLeft="true">
        <!-- 按钮微博 -->
        <TextView  android:textColor="#ff4a4a4a" android:gravity="center_horizontal" android:id="@id/tvLeft" android:layout_width="fill_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_alignParentBottom="true" />
