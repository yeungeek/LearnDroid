        <ImageView android:id="@id/ivLeft" android:paddingLeft="50dip" android:gravity="center_horizontal" android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="centerInside" android:layout_above="@id/tvLeft" />
