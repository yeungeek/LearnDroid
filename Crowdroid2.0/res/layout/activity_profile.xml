<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            xmlns:Android="http://schemas.android.com/apk/res/android"
            Android:id="@+id/layout_main_top"
            Android:layout_width="fill_parent"
            Android:layout_height="wrap_content"
            Android:layout_alignParentTop="true" >

            <include layout="@layout/tools_header" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/layout_main_top" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <LinearLayout
                        android:id="@+id/LinearLayout02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dip"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:id="@+id/relativeLayout1"
                            android:layout_width="60dip"
                            android:layout_height="60dip"
                            android:layout_gravity="top" >

                            <android.webkit.WebView
                                android:id="@+id/profile_user_image"
                                android:layout_width="60dip"
                                android:layout_height="60dip" >
                            </android.webkit.WebView>

                            <ImageView
                                android:id="@+id/sina_user_verified"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:visibility="invisible" >
                            </ImageView>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dip"
                            android:layout_marginTop="3dip"
                            android:background="@drawable/profile_description"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/profile_edit"
                                android:orientation="vertical"
                                android:padding="3dip" >

                                <RelativeLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:id="@+id/profile_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dip"
                                        android:layout_marginTop="2dip"
                                        android:textSize="20dip" >
                                    </TextView>

                                    <ImageView
                                        android:id="@+id/renren_star"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dip"
                                        android:layout_toRightOf="@+id/profile_name"
                                        android:src="@drawable/multiselectdialog_starton"
                                        android:visibility="gone" />
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/profile_description"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/profile_name"
                                    android:layout_marginLeft="15px"
                                    android:autoLink="all" >
                                </TextView>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/profile_edit"
                                android:layout_width="60dip"
                                android:layout_height="60dip"
                                android:layout_alignParentRight="true"
                                android:background="@android:drawable/ic_menu_upload_you_tube"
                                android:gravity="center"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="3dip"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:id="@+id/linear_set_follow"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >

                            <ImageView
                                android:id="@+id/profile_followed_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:layout_gravity="left"
                                android:layout_marginLeft="10dip" />

                            <TextView
                                android:id="@+id/profile_set_followed_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dip"
                                android:background="@drawable/selector_button_add"
                                android:clickable="true"
                                android:focusable="false"
                                android:gravity="right"
                                android:paddingBottom="5dip"
                                android:textColor="#F08700"
                                android:textSize="18sp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/base_info"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginTop="20dip"
                            android:background="@drawable/profile_description"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/serch_gender"
                                    android:textColor="#F08700"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/gender"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dip"
                                    android:gravity="center"
                                    android:textColor="#F08700"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/line_gender"
                                android:layout_width="fill_parent"
                                android:layout_height="1dip"
                                android:layout_marginLeft="5dip"
                                android:layout_marginRight="5dip"
                                android:background="#C3E1F0" >
                            </TextView>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/serch_birth"
                                    android:textColor="#F08700"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/birthday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dip"
                                    android:gravity="center"
                                    android:textColor="#F08700"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/line_birthday"
                                android:layout_width="fill_parent"
                                android:layout_height="1dip"
                                android:layout_marginLeft="5dip"
                                android:layout_marginRight="5dip"
                                android:background="#C3E1F0" >
                            </TextView>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/serch_hometown"
                                    android:textColor="#F08700"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/home"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dip"
                                    android:gravity="center"
                                    android:textColor="#F08700"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/line_home"
                                android:layout_width="fill_parent"
                                android:layout_height="1dip"
                                android:layout_marginLeft="5dip"
                                android:layout_marginRight="5dip"
                                android:background="#C3E1F0" >
                            </TextView>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/serch_network"
                                    android:textColor="#F08700"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/network"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dip"
                                    android:gravity="center"
                                    android:textColor="#F08700"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/line_net"
                                android:layout_width="fill_parent"
                                android:layout_height="1dip"
                                android:layout_marginLeft="5dip"
                                android:layout_marginRight="5dip"
                                android:background="#C3E1F0" >
                            </TextView>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/line1"
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:background="#C3E1F0" >
                        </TextView>

                        <RelativeLayout
                            android:id="@+id/linear_follow"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_button_add"
                            android:clickable="true" >

                            <TextView
                                android:id="@+id/profile_follow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dip"
                                android:gravity="left"
                                android:padding="3dip"
                                android:text="@string/follow"
                                android:textColor="#0F5A78"
                                android:textSize="18sp" >
                            </TextView>

                            <TextView
                                android:id="@+id/profile_follow_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dip"
                                android:focusable="false"
                                android:gravity="right"
                                android:padding="3dip"
                                android:textColor="#F08700"
                                android:textSize="18sp" >
                            </TextView>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/line2"
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:background="#C3E1F0" >
                        </TextView>

                        <RelativeLayout
                            android:id="@+id/linear_followed"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_button_add"
                            android:clickable="true" >

                            <TextView
                                android:id="@+id/profile_followed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dip"
                                android:gravity="left"
                                android:padding="3dip"
                                android:text="@string/followed"
                                android:textColor="#0F5A78"
                                android:textSize="18sp" >
                            </TextView>

                            <TextView
                                android:id="@+id/follower_count"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignRight="@+id/profile_followed"
                                android:layout_alignTop="@+id/profile_followed"
                                android:layout_marginRight="-25dp"
                                android:layout_marginTop="2dp"
                                android:background="@drawable/count"
                                android:gravity="center"
                                android:text="10"
                                android:textColor="#ffffff"
                                android:textSize="10sp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/profile_followed_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dip"
                                android:focusable="false"
                                android:gravity="right"
                                android:padding="3dip"
                                android:textColor="#F08700"
                                android:textSize="18sp" >
                            </TextView>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/line3"
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:background="#C3E1F0" >
                        </TextView>

                        <RelativeLayout
                            android:id="@+id/linear_microblog"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_button_add"
                            android:clickable="true" >

                            <TextView
                                android:id="@+id/profile_microblog_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dip"
                                android:gravity="left"
                                android:padding="3dip"
                                android:text="@string/profile_activity_tweets_count"
                                android:textColor="#0F5A78"
                                android:textSize="18sp" >
                            </TextView>

                            <TextView
                                android:id="@+id/profile_microblog_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dip"
                                android:focusable="false"
                                android:gravity="right"
                                android:padding="3dip"
                                android:textColor="#F08700"
                                android:textSize="18sp" >
                            </TextView>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/line4"
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:background="#C3E1F0" >
                        </TextView>

                        <RelativeLayout
                            android:id="@+id/linear_trend"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_button_add"
                            android:clickable="true" >

                            <TextView
                                android:id="@+id/profile_trends"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dip"
                                android:gravity="left"
                                android:padding="3dip"
                                android:text="@string/trend"
                                android:textColor="#0F5A78"
                                android:textSize="18sp" >
                            </TextView>

                            <TextView
                                android:id="@+id/profile_trend_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dip"
                                android:focusable="false"
                                android:gravity="right"
                                android:padding="3dip"
                                android:textColor="#F08700"
                                android:textSize="18sp" >
                            </TextView>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/line5"
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:background="#C3E1F0" >
                        </TextView>

                        <RelativeLayout
                            android:id="@+id/linear_list"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_button_add"
                            android:clickable="true" >

                            <TextView
                                android:id="@+id/profile_lists"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dip"
                                android:gravity="left"
                                android:padding="3dip"
                                android:text="@string/profile_activity_list"
                                android:textColor="#0F5A78"
                                android:textSize="18sp" >
                            </TextView>

                            <TextView
                                android:id="@+id/profile_list_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dip"
                                android:focusable="false"
                                android:gravity="right"
                                android:padding="3dip"
                                android:textColor="#F08700"
                                android:textSize="18sp" >
                            </TextView>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/line6"
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:background="#C3E1F0" >
                        </TextView>

                        <RelativeLayout
                            android:id="@+id/linear_tag"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_button_add"
                            android:clickable="true" >

                            <TextView
                                android:id="@+id/profile_tag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dip"
                                android:gravity="left"
                                android:padding="3dip"
                                android:textColor="#0F5A78"
                                android:textSize="18sp" >
                            </TextView>

                            <TextView
                                android:id="@+id/profile_tag_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dip"
                                android:focusable="false"
                                android:gravity="right"
                                android:padding="3dip"
                                android:textColor="#F08700"
                                android:textSize="18sp" >
                            </TextView>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/line7"
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:background="#C3E1F0" >
                        </TextView>

                        <RelativeLayout
                            android:id="@+id/linear_mood"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_button_add"
                            android:clickable="true" >

                            <TextView
                                android:id="@+id/profile_mood"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dip"
                                android:gravity="left"
                                android:padding="3dip"
                                android:textColor="#0F5A78"
                                android:textSize="18sp" >
                            </TextView>

                            <TextView
                                android:id="@+id/profile_mood_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dip"
                                android:focusable="false"
                                android:gravity="right"
                                android:padding="3dip"
                                android:textColor="#F08700"
                                android:textSize="18sp" >
                            </TextView>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/line8"
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:background="#C3E1F0" >
                        </TextView>

                        <RelativeLayout
                            android:id="@+id/linear_column"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_button_add"
                            android:clickable="true" >

                            <TextView
                                android:id="@+id/profile_column"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dip"
                                android:gravity="left"
                                android:padding="3dip"
                                android:text="@string/profile_activity_column"
                                android:textColor="#0F5A78"
                                android:textSize="18sp" >
                            </TextView>

                            <TextView
                                android:id="@+id/profile_column_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dip"
                                android:focusable="false"
                                android:gravity="right"
                                android:padding="3dip"
                                android:textColor="#F08700"
                                android:textSize="18sp" >
                            </TextView>
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/line9"
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_marginLeft="5dip"
                            android:layout_marginRight="5dip"
                            android:background="#C3E1F0" >
                        </TextView>

                        <RelativeLayout
                            android:id="@+id/linear_column_timeline"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_button_add"
                            android:clickable="true" >

                            <TextView
                                android:id="@+id/profile_column_timeline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dip"
                                android:gravity="left"
                                android:padding="3dip"
                                android:text="@string/profile_activity_column_timeline"
                                android:textColor="#0F5A78"
                                android:textSize="18sp" >
                            </TextView>

                            <TextView
                                android:id="@+id/profile_column_timeline_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dip"
                                android:focusable="false"
                                android:gravity="right"
                                android:padding="3dip"
                                android:textColor="#F08700"
