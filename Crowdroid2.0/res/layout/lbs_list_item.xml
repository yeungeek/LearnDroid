<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >
    
   
    
    <Button android:id="@+id/here"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbs_here"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_background"/>
    
     <Button android:id="@+id/near"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbs_near"
        android:textColor="#ffffff"
        android:layout_below="@+id/here"
        android:background="@drawable/button_background"
        />
    
    <ListView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/here_list"
        android:cacheColorHint="#00000000"
        android:layout_above="@+id/near_n"
        android:layout_below="@+id/near">
        
    </ListView>
    
   
    <!-- 
    <ListView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/near_list"
        android:layout_below="@+id/near"
        > 
        </ListView>
        -->
    
        
        <Button android:id="@+id/near_n"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbs_near"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@drawable/button_background"
        />

</RelativeLayout>