<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/tools_header" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="3dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cfb_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:focusable="false"
            android:padding="3dip"
            android:textColor="#F08700"
            android:textSize="20sp" >
        </TextView>

        <RelativeLayout
            android:id="@+id/r_create_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button_add"
            android:clickable="true" >

            <TextView
                android:id="@+id/createTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dip"
                android:gravity="left"
                android:padding="3dip"
                android:text="创建时间"
                android:textColor="#0F5A78"
                android:textSize="18sp" >
            </TextView>

            <TextView
                android:id="@+id/cfb_album_created_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:focusable="false"
                android:gravity="right"
                android:padding="3dip"
                android:textColor="#000000"
                android:textSize="15sp" >
            </TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="#C3E1F0" >
        </TextView>

        <RelativeLayout
            android:id="@+id/r_create_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button_add"
            android:clickable="true" >

            <TextView
                android:id="@+id/creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dip"
                android:gravity="left"
                android:padding="3dip"
                android:text="创建者"
                android:textColor="#0F5A78"
                android:textSize="18sp" >
            </TextView>

            <TextView
                android:id="@+id/cfb_album_created_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:focusable="false"
                android:gravity="right"
                android:padding="3dip"
                android:textColor="#000000"
                android:textSize="15sp" >
            </TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="#C3E1F0" >
        </TextView>

        <RelativeLayout
            android:id="@+id/r_album_count"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button_add"
            android:clickable="true" >

            <TextView
                android:id="@+id/cfb_album_count_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dip"
                android:gravity="left"
                android:padding="3dip"
                android:text="图片个数"
                android:textColor="#0F5A78"
                android:textSize="18sp" >
            </TextView>

            <TextView
                android:id="@+id/cfb_album_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:focusable="false"
                android:padding="3dip"
                android:textColor="#000000"
                android:textSize="15sp" >
            </TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/line3"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="#C3E1F0" >
        </TextView>

        <RelativeLayout
            android:id="@+id/r_retweet_count"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button_add"
            android:clickable="true"
            android:visibility="gone" >

            <TextView
                android:id="@+id/rt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dip"
                android:gravity="left"
                android:padding="3dip"
                android:text="转发数"
                android:textColor="#0F5A78"
                android:textSize="18sp" >
            </TextView>

            <TextView
                android:id="@+id/cfb_retweet_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:focusable="false"
                android:padding="3dip"
                android:textColor="#000000"
                android:textSize="15sp" >
            </TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/line4"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="#C3E1F0"
            android:visibility="gone" >
        </TextView>

        <RelativeLayout
            android:id="@+id/r_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button_add"
            android:clickable="true" >

            <TextView
                android:id="@+id/t_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dip"
                android:gravity="left"
                android:padding="3dip"
                android:text="专辑描述"
                android:textColor="#0F5A78"
                android:textSize="18sp" >
            </TextView>

            <TextView
                android:id="@+id/cfb_album_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t_description"
                android:layout_marginLeft="10dip"
                android:focusable="false"
                android:padding="3dip"
                android:textColor="#000000"
                android:textSize="15sp" >
            </TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/line5"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="#C3E1F0" >
        </TextView>
    </LinearLayout>

</LinearLayout>