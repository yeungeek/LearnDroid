<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_focused="false" android:state_pressed="false"><shape>
            <gradient android:endColor="#B0E0E6" android:startColor="#87CEFA" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <gradient android:endColor="#B0E0E6" android:startColor="#87CEFA" />

            <stroke android:width="2dp" android:color="#98F5FF" />

            <corners android:radius="5dp" />

            <padding android:bottom="5dip" android:left="5dip" android:right="5dip" android:top="5dip" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:endColor="#B0E0E6" android:startColor="#B0E0E6" />

            <stroke android:width="2dp" android:color="#98F5FF" />

            <corners android:radius="8dp" />

            <padding android:bottom="5dip" android:left="5dip" android:right="5dip" android:top="5dip" />
        </shape></item>

</selector>