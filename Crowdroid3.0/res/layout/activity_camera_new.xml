<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#696969"
	android:padding="15dip">
	<RelativeLayout
		android:orientation="horizontal"
		android:layout_alignParentLeft="true"
		android:layout_height="fill_parent"
		android:layout_alignRight="@+id/LinearLayout03"
		android:layout_marginRight="55dip"
		android:id="@+id/RelativeLayout01"
		android:layout_above="@+id/size_show"
		android:layout_marginTop="7dip"
		android:layout_width="100dip"
		android:background="#ffffff"
		android:padding="2dip">

		<LinearLayout
			android:id="@+id/LinearLayout01"
			android:layout_height="fill_parent"
			android:layout_alignParentLeft="true"
			android:layout_width="wrap_content">
			<RelativeLayout
				android:id="@+id/RelativeLayout02"
				android:layout_height="fill_parent"
				android:layout_width="fill_parent">
				<SurfaceView
					android:id="@+id/mySurfaceView"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent" />
				<ImageView
					android:id="@+id/myImageView"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:scaleType="fitXY" />
			</RelativeLayout>
		</LinearLayout>


	</RelativeLayout>
	<TextView
		android:layout_height="wrap_content"
		android:id="@+id/size_show"
		android:layout_width="fill_parent"
		android:paddingLeft="120dip"
		android:layout_alignParentBottom="true"
		android:layout_marginRight="55dip"></TextView>
	<LinearLayout
		android:id="@+id/LinearLayout03"
		android:layout_alignParentRight="true"
		android:layout_height="fill_parent"
		android:layout_width="48dip" android:layout_marginTop="7dip">
		<RelativeLayout
			android:id="@+id/controller"
			android:layout_height="fill_parent"
			android:layout_width="wrap_content">
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent">
				<LinearLayout
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/camera_large"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dip"
                android:layout_height="48dip"
                android:layout_gravity="center_horizontal"
                android:focusable="true"
                android:src="@drawable/camera_big"
                android:scaleType="fitXY"
                android:background="#00ffffff"
                android:clickable="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/schedule"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/camera_small"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dip"
                android:layout_height="48dip"
                android:layout_gravity="center_horizontal"
                android:focusable="true"
                android:scaleType="fitXY"
                android:background="#00ffffff"
                android:src="@drawable/camera_small"
                android:clickable="false" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_app"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/camera_rec"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dip"
                android:layout_height="48dip"
                android:layout_gravity="center_horizontal"
                android:focusable="true"
                android:scaleType="fitXY"
                android:background="#00ffffff"
                android:src="@drawable/camera_rec"
                android:clickable="false" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/camera_save"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dip"
                android:layout_height="48dip"
                android:layout_gravity="center_horizontal"
                android:focusable="true"
                android:scaleType="fitXY"
                android:background="#00ffffff"
                android:src="@drawable/camera_save"
                android:clickable="false" />
        </LinearLayout>
         <LinearLayout
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/camera_cancel"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dip"
                android:layout_height="48dip"
                android:scaleType="fitXY"
                android:background="#00ffffff"
                android:layout_gravity="center_horizontal"
                android:focusable="true"
                android:src="@drawable/camera_cancel"
                android:clickable="false" />
        </LinearLayout>
				<!-- <ImageButton
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:scaleType="fitXY"
					android:layout_width="wrap_content" android:id="@+id/camera_large" android:src="@drawable/camera_big"></ImageButton>
				<ImageButton
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:scaleType="fitXY"
					android:layout_width="wrap_content"
					android:id="@+id/camera_small" android:src="@drawable/camera_small"></ImageButton>
				<ImageButton
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:scaleType="fitXY"
					android:layout_width="wrap_content"
					android:id="@+id/camera_rec" android:src="@drawable/camera_rec"></ImageButton>
				<ImageButton
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:scaleType="fitXY"
					android:layout_width="wrap_content"
					android:id="@+id/camera_save" android:src="@drawable/camera_save"></ImageButton>
				<ImageButton
					android:layout_weight="1"
					android:layout_width="wrap_content"
					android:id="@+id/camera_cancel"
					android:layout_height="wrap_content"
					android:scaleType="fitXY" android:src="@drawable/camera_cancel"></ImageButton>
			 --></LinearLayout>
		</RelativeLayout>
	</LinearLayout>

</RelativeLayout>
