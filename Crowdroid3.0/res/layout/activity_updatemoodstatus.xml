<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <RelativeLayout
        xmlns:Android="http://schemas.android.com/apk/res/android"
        Android:id="@+id/layout_main_top"
        Android:layout_width="fill_parent"
        Android:layout_height="wrap_content"
        Android:layout_alignParentTop="true" >

        <include layout="@layout/tools_header" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/layout_main_top" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/select_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5dip"
                android:text="选择心情"
                android:textColor="#0F5A78"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/select_linear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/select_mood"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5dip"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.webkit.WebView
                    android:id="@+id/mood1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:layout_weight="1"
                    android:scrollbars="none" >
                </android.webkit.WebView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.webkit.WebView
                    android:id="@+id/mood2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:layout_weight="1"
                    android:scrollbars="none" >
                </android.webkit.WebView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.webkit.WebView
                    android:id="@+id/mood3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:layout_weight="1"
                    android:scrollbars="none" >
                </android.webkit.WebView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.webkit.WebView
                    android:id="@+id/mood4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:layout_weight="1"
                    android:scrollbars="none" >
                </android.webkit.WebView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.webkit.WebView
                    android:id="@+id/mood5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:layout_weight="1"
                    android:scrollbars="none" >
                </android.webkit.WebView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/show_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/select_linear"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5dip"
                android:text=""
                android:textColor="#0F5A78"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/write_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/show_mood"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5dip"
                android:text="书写心情"
                android:textColor="#0F5A78"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/update_text"
                android:layout_width="fill_parent"
                android:layout_height="100dip"
                android:layout_below="@+id/write_mood"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:gravity="top"
                android:text=""
                android:textSize="12dp" />

            <RelativeLayout
                android:id="@+id/ly2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update_text"
                android:layout_marginBottom="2dip"
                android:layout_marginTop="5dip" >

                <TextView
                    android:id="@+id/counterText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dip"
                    android:text="140"
                    android:textColor="#0F5A78"
                    android:textSize="14px"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/send"
                    android:layout_width="wrap_content"
                    android:layout_height="40dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/selector_button_add"
                    android:gravity="center"
                    android:text="@string/send"
                    android:textColor="#0F5A78"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>