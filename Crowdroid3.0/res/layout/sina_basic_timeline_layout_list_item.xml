<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mobile="http://net.mobile.crowdroid"
    android:id="@+id/linear_layout_time_line"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ceFFF0F0"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linear_layout_time_line_list_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="68dip"
            android:layout_height="68dip" >

            <WebView
                android:id="@+id/user_image"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:paddingLeft="10dip"
                android:paddingTop="10dip"
                android:src="@drawable/icon" >
            </WebView>

            <ImageView
                android:id="@+id/sina_user_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" >
            </ImageView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/level_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/normal"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/screen_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dip"
                    android:text="@string/screen_name"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/update_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingTop="2dip"
                    android:text="@string/update_time" />
            </LinearLayout>

            <TextView
                android:id="@+id/status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dip"
                android:paddingTop="3dip"
                android:text="@string/status"
                android:visibility="gone" />

            <android.webkit.WebView
                android:id="@+id/web_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dip" >
            </android.webkit.WebView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip" >

                <android.webkit.WebView
                    android:id="@+id/web_view_status"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dip"
                    android:layout_weight="1"
                    android:focusable="false" >
                </android.webkit.WebView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/retweet_top"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sina_background_t"
                android:orientation="vertical"
                android:visibility="gone" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sina_background_m"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/retweeted_screen_name_status"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:padding="10dip"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:visibility="gone" >
                </TextView>

                <android.webkit.WebView
                    android:id="@+id/web_retweet_status"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="10dip" >
                </android.webkit.WebView>

                <android.webkit.WebView
                    android:id="@+id/web_view_retweet_status"
                    android:layout_width="80dip"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dip"
                    android:layout_weight="1"
                    android:focusable="false" >
                </android.webkit.WebView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/retweet_bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:background="@drawable/sina_background_b"
                android:orientation="vertical"
                android:visibility="gone" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_time_retweet_comment_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_retweet_count"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_weight="1"
            android:paddingTop="2dip"
            android:text="@string/retweet_count" />

        <TextView
            android:id="@+id/text_comment_count"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_weight="1"
            android:paddingTop="2dip"
            android:text="@string/comment_count" />
    </LinearLayout>

    <TextView
        android:id="@+id/linear_line"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_above="@+id/text_get_more_tweets"
        android:background="#C3E1F0" />

    <com.anhuioss.crowdroid.util.IconTextView
        android:id="@+id/text_get_more_tweets"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="7dip"
        android:paddingTop="7dip"
        android:textColor="#000000"
        android:textSize="18sp" />

</LinearLayout>